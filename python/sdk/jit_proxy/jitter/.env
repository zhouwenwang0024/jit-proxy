# 网络/程序
RPC_URL=https://api.mainnet-beta.solana.com
JIT_PROXY_PROGRAM_ID=<你的 jit-proxy 程序ID>
DRIFT_PROGRAM_ID=<Drift v2 程序ID>

# Anchor Accounts
DRIFT_STATE=<state pubkey>
DRIFT_USER=<你的 user pubkey>
DRIFT_USER_STATS=<你的 user_stats pubkey>

# 市场
MARKET_INDEX=0

# 运行
IDL_PATH=target/idl/jit_proxy.json
LOOP_INTERVAL_MS=250
COOLDOWN_MS_ON_SUCCESS=800

# 实盘 Maker 池控制
MAX_MAKERS=16          # 每笔随 tx 携带的 maker 数量上限（越多越稳，但交易更大）
MAKER_TTL_SECS=60      # “最近活跃”的时间窗口

# 钱包（u8 数组 JSON）
WALLET_KEYPAIR_JSON=[1,2,3,...]

# 可选白名单兜底（池子暂时为空时使用；逗号分隔 User 公钥）
# MAKER_USERS=UserPk1,UserPk2
# 可选算力/优先费
# CU_LIMIT=1200000
# CU_PRICE_MICROLAMPORTS=0
